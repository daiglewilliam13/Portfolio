		<input required class="input-field" type="text" id="email" name="email">
		<br>
		<label for="topic">Topic of Interest:</label>
		<br>
		<select id="topic" class="input-field" name="topic">
			<option value="web-development">Web Development</option>
			<option value="Shop Themes">Customized Shop Themes</option>
			<option value="WYSIWYG">Wordpress/WYSIWYG</option>
			<option value="Other">Other</option>
		</select>
		<br>
		<label for="message">Your Message:</label>
		<br>
		<textarea required class="input-field" id="message-input"></textarea>
		<br>
		<div id="message-box">	
		<button id="send-message-button">Send Message</button>
		</div>
		</form>
		<p id="res-message"></p>
	</div>
</section>
