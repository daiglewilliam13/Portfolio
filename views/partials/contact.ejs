<section id="contact">
	<div id="contact-header">
		<p>Contact Me:</p>
		<p>Automatically sends an email to daiglewilliam13@gmail.com</p>
	</div>
	<div id="contact-form-wrapper">
		<form id="contact-form" onsubmit="return false">
		<label for="name">Your Name:</label>
		<br>
		<input required class="input-field" type="text" id="name" name="name">
		<br>
		<label for="email">Your Email:</label>
